          -if (@promoted)
            .HomeIndexPhoto  = link_to image_tag(@promoted.avatar_url), @promoted
            h4=link_to @promoted.name, @promoted
            p="#{@promoted.city}, #{@promoted.state}"
            / p.categories Category
            p.blurb 
              -if (@promoted.bio)
                ="#{@promoted.bio[0..144]}... "
              

