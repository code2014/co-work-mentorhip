.container-fluid
  .row-fluid
    .container-fluid
      .span8
        .row-fluid
          h3 style="float:left;" 
            =link_to "Popular Classes", users_path
        .row-fluid 
          ul.classes 
            -@popular.each do |pop|
              li.span6
                .HomeIndexPhoto  =link_to image_tag(pop.avatar_url), pop
                h4=link_to pop.name, pop
                span="#{pop.city}, #{pop.state}"
                / p.categories Category

                p.blurb
                  -if (pop.bio)
                    ="#{pop.bio[0..144]}... "
                  =link_to "See more", pop
        .row-fluid
          h3 style="float:left;" 
            =link_to "Recommended Classes", users_path
        .row-fluid
          ul.classes
            -@recommended.each do |rec|
              li.span5 style="width: 47.426%;"
                .RecommendPhoto =link_to image_tag(rec.avatar_url), rec
                h4=link_to rec.name, rec
                p="#{rec.city}, #{rec.state}"

      .span4.well.sidebar-nav
        h3 =link_to "Promoted Class", @promoted
